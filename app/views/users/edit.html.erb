<p id = "notice"><%= notice %></p>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class = "form-group">
          <label for ="user_name">Name</label>
          <input type = "text", name = "user[name]", class = "form-control", id = "user_name">
        </div>
        <div class = "form-group">
          <label for = "user_image">Image</label>
          <input type = "file", name = "user[profile_image]", class = "form-control-file user_image", id = "user_profile_image">
        </div>
        <div class = "form-group">
          <label for = "user_introduction">Introduction</label>
          <textarea name = "user[introduction]", class = "form-control introduction", id = "user_introduction"></textarea>
        </div>
        <div class = "form-group">
          <input type = "submit", name = "commit", value = "Update User", class = "btn btn-secondary edit_user#{current_user.id}", data-disable-with = "Update User">
        </div>
      <% end %>
    </div>
  </div>
</div>
