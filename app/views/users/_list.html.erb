    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
    
      <table class = "table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "", edit_user_path(user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      
    <h2 class = "mt-3">New book</h2>
      <%= form_with model:book, local:true do |f| %>
        <div class = "form-group">
          <label for = "book_title">Title</label>
          <input type = "text", name = "book[title]", class = "form-control", id = "book_title">
        </div>
        <div class = "form-group">
          <label for = "book_body">Opinion</label>
          <textarea row = "3", name = "book[body]", class = "form-control", id = "book_body"></textarea>
        </div>
        <div class = "form-group">
          <input type = "submit", name = "commit", value = "Create Book", class = "btn btn-success", data-disable-with = "Create Book">
        </div>
      <% end %>
    </div>
  