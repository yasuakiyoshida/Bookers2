<p id = "notice"><%= notice %></p>
<div class = "container px-0">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'users/list', book: @books, user: @book.user %>
      <div class = "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class = "table">
          <tbody>
            <tr>
              <td>
                <%= link_to @book.user do %>
                  <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "40x40"%>
                <% end %></br>
                <%= link_to @book.user do %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>